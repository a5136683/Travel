<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <ImageView
        android:id="@+id/home_lv_lvImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0dd"/>
    <TextView
        android:id="@+id/home_lv_lvTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_lv_lvImg"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="吓死人"/>
    <LinearLayout
        android:id="@+id/home_lv_lvll"
        android:layout_below="@id/home_lv_lvTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars = "5"
                android:rating   = "5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0已售"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="测试1"
            android:layout_weight="1"/>
            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试2"
                android:textColor="#ddac00"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt000"
        android:layout_below="@id/home_lv_lvll"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_below="@id/txt000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="认证卖家"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="如实描述"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24小时内响应"/>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>